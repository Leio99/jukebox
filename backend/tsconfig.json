{
    "compilerOptions": {
      "target": "es6",  
      "module": "esnext",
      "esModuleInterop": true,    
      "forceConsistentCasingInFileNames": true, 
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "src",
      "strictNullChecks": false,
      "outDir": "dist",
      "moduleResolution": "node",
      "experimentalDecorators": true
    },
    "include": ["src"],
    "tsc-alias": {
      "resolveFullPaths": true,
      "verbose": false
    }
  }